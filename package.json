{
  "name": "eslint-plugin-graphql",
  "version": "1.4.1",
  "description": "GraphQL ESLint plugin.",
  "author": "Sashko Stubailo",
  "main": "lib/index.js",
  "scripts": {
    "format": "prettier",
    "test": "mocha test/index.js",
    "precommit": "lint-staged && npm test",
    "prepublish": "babel ./src --ignore test --out-dir ./lib",
    "pretest": "node test/updateSchemaJson.js"
  },
  "homepage": "https://github.com/apollostack/eslint-plugin-graphql",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollostack/eslint-plugin-graphql.git"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^4.1.1",
    "graphql": "^0.11.0",
    "graphql-tools": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^3.4.2",
    "prettier": "^1.9.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run format -- --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "useTabs": false
  },
  "license": "MIT",
  "dependencies": {
    "graphql-config": "^1.0.7",
    "lodash": "^4.11.1"
  },
  "peerDependencies": {
    "graphql": "^0.10.1 || ^0.11.0"
  }
}
